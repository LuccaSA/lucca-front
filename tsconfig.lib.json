{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "../../../out-tsc/lib",
		"declaration": true,
		"declarationMap": true,
		"inlineSources": true,
		"types": [],
		"lib": ["dom", "es2018"],
		"paths": {
			"@lucca-front/ng": ["./dist/ng/root"],
			"@lucca-front/ng/core": ["./dist/ng/core"],
			"@lucca-front/ng/animations": ["./dist/ng/animations"],
			"@lucca-front/ng/input": ["./dist/ng/input"],
			"@lucca-front/ng/scroll": ["./dist/ng/scroll"],
			"@lucca-front/ng/safe-content": ["./dist/ng/safe-content"],
			"@lucca-front/ng/number": ["./dist/ng/number"],
			"@lucca-front/ng/popover": ["./dist/ng/popover"],
			"@lucca-front/ng/popup": ["./dist/ng/popup"],
			"@lucca-front/ng/tooltip": ["./dist/ng/tooltip"],
			"@lucca-front/ng/dropdown": ["./dist/ng/dropdown"],
			"@lucca-front/ng/picker": ["./dist/ng/picker"],
			"@lucca-front/ng/modal": ["./dist/ng/modal"],
			"@lucca-front/ng/select": ["./dist/ng/select"],
			"@lucca-front/ng/sidepanel": ["./dist/ng/sidepanel"],
			"@lucca-front/ng/option": ["./dist/ng/option"],
			"@lucca-front/ng/date": ["./dist/ng/date"],
			"@lucca-front/ng/api": ["./dist/ng/api"],
			"@lucca-front/ng/department": ["./dist/ng/department"],
			"@lucca-front/ng/establishment": ["./dist/ng/establishment"],
			"@lucca-front/ng/qualification": ["./dist/ng/qualification"],
			"@lucca-front/ng/user": ["./dist/ng/user"],
			"@lucca-front/ng/material": ["./dist/ng/material"],
			"@lucca-front/ng/formly": ["./dist/ng/formly"]
		}
	},
	"angularCompilerOptions": {
		"skipTemplateCodegen": true,
		"strictMetadataEmit": true,
		"enableResourceInlining": true
	},
	"exclude": ["src/test.ts", "**/*.spec.ts"]
}
