{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "./",
    "rootDir": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "downlevelIteration": true,
    "module": "esnext",
    "esModuleInterop": true,
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@lucca-front/ng/core": [
        "dist/core"
      ],
      "@lucca-front/ng/animations": [
        "dist/animations"
      ],
      "@lucca-front/ng/input": [
        "dist/input"
      ],
      "@lucca-front/ng/scroll": [
        "dist/scroll"
      ],
      "@lucca-front/ng/safe-content": [
        "dist/safe-content"
      ],
      "@lucca-front/ng/number": [
        "dist/number"
      ],
      "@lucca-front/ng/popover": [
        "dist/popover"
      ],
      "@lucca-front/ng/popup": [
        "dist/popup"
      ],
      "@lucca-front/ng/formly": [
        "dist/formly"
      ],
      "@lucca-front/ng/material": [
        "dist/material"
      ],
      "@lucca-front/ng/tooltip": [
        "dist/tooltip"
      ],
      "@lucca-front/ng/picker": [
        "dist/picker"
      ],
      "@lucca-front/ng/modal": [
        "dist/modal"
      ],
      "@lucca-front/ng/sidepanel": [
        "dist/sidepanel"
      ],
      "@lucca-front/ng/select": [
        "dist/select"
      ],
      "@lucca-front/ng/date": [
        "dist/date"
      ],
      "@lucca-front/ng/option": [
        "dist/option"
      ],
      "@lucca-front/ng/api": [
        "dist/api"
      ],
      "@lucca-front/ng/department": [
        "dist/department"
      ],
      "@lucca-front/ng/user": [
        "dist/user"
      ],
      "@lucca-front/ng/dropdown": [
        "dist/dropdown"
      ],
      "@lucca-front/ng/establishment": [
        "dist/establishment"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": false,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "strictTemplates": true
  },
  "exclude": [
    "**/test.ts",
    "**/environment.prod.ts",
    "**/*.spec.ts",
    "./schematics/**"
  ]
}