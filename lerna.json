{
  "lerna": "3.19.0",
  "packages": [
    "packages/*",
    "packages/ng/dist"
  ],
  "npmClient": "npm",
  "version": "4.0.0-rc.19",
  "command": {
    "publish": {
      "message": "publish %s",
      "forcePublish": "*",
      "ignoreChanges": "packages/ng/dist/**",
      "preid": "rc",
      "allowBranch": ["master", "rc"]
    },
    "version": {
      "allowBranch": ["master", "rc"]
    },
    "clean": {
      "ignore": "@lucca-front/ng"
    },
    "bootstrap": {
      "ignore": "@lucca-front/ng"
    }
  }
}
