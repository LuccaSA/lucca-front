{
  "preset": "jest-preset-angular",
  "setupFilesAfterEnv": ["<rootDir>/setup-jest.ts"],
  "collectCoverage": false,
  "testEnvironment": "jsdom",
  "testPathIgnorePatterns": ["<rootDir>/node_modules/", "<rootDir>/packages/ng/schematics/"],
  "watchPathIgnorePatterns": ["/node_modules/"],
  "modulePathIgnorePatterns": ["<rootDir>/packages/ng/dist"],
  "transformIgnorePatterns": ["node_modules/(?!@angular|@angular-devkit|@ngneat|ngx-mask|@testing-library)"],
  "moduleNameMapper": {
    "^@lucca-front/ng/(.*)$": "<rootDir>/packages/ng/$1/public-api.ts",
    "^@/stories/(.*)$": "<rootDir>/stories/documentation/$1",
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "roots": ["<rootDir>/packages/ng", "<rootDir>/stories/documentation"],
  "globalSetup": "./jest-global-setup.js"
}
