{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm"
  },
  "newProjectRoot": "packages/ng-bis",
  "projects": {
    "ng-bis": {
      "projectType": "library",
      "root": "packages/ng-bis",
      "sourceRoot": "packages/ng-bis/src",
      "prefix": "lu",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "packages/ng-bis/tsconfig.lib.json",
            "project": "packages/ng-bis/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "packages/ng-bis/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "packages/ng-bis/src/test.ts",
            "tsConfig": "packages/ng-bis/tsconfig.spec.json",
            "karmaConfig": "packages/ng-bis/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "packages/ng-bis/tsconfig.lib.json",
              "packages/ng-bis/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "user": {
      "projectType": "library",
      "root": "packages/ng-bis/user",
      "sourceRoot": "packages/ng-bis/user/src",
      "prefix": "lu",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "packages/ng-bis/user/tsconfig.lib.json",
            "project": "packages/ng-bis/user/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "packages/ng-bis/user/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "packages/ng-bis/user/src/test.ts",
            "tsConfig": "packages/ng-bis/user/tsconfig.spec.json",
            "karmaConfig": "packages/ng-bis/user/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "packages/ng-bis/user/tsconfig.lib.json",
              "packages/ng-bis/user/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "ng-bis"
}
