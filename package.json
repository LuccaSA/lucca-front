{
	"name": "lucca-front",
	"version": "8.0.0",
	"description": "a library of useful components for web developpement",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/LuccaSA/lucca-front.git"
	},
	"keywords": [
		"lucca",
		"angular",
		"ng",
		"scss"
	],
	"author": "lucien bertin <lbertin@lucca.fr>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/LuccaSA/lucca-front/issues"
	},
	"private": true,
	"workspaces": [
		"packages/icons",
		"packages/scss"
	],
	"scripts": {
		"build": "npm run build:icons && npm run build:scss && npm run build:ng",
		"build:icons": "gulp icons",
		"build:scss": "gulp scss",
		"build:ng": "ng run ng:build && gulp ng:schematics",
		"start": "ng run storybook:start",
		"jenkins-test": "jest --no-cache --runInBand",
		"test": "jest --maxWorkers=4 --isolatedModules=true --detectOpenHandles --watchAll",
		"compodoc": "compodoc -p ./tsconfig.compodoc-json.json -e json -d .storybook",
		"build-compodoc": "compodoc -p ./tsconfig.compodoc-html.json -d compodoc-static",
		"build-storybook": "ng run storybook:build",
		"lint": "ng lint",
		"lint:scss": "stylelint --config .stylelintrc.json packages/scss/src/**/*.scss"
	},
	"dependencies": {
		"@angular/animations": "^14.0.0",
		"@angular/cdk": "^14.0.0",
		"@angular/common": "^14.0.0",
		"@angular/compiler": "^14.0.0",
		"@angular/core": "^14.0.0",
		"@angular/forms": "^14.0.0",
		"@angular/platform-browser": "^14.0.0",
		"@angular/platform-browser-dynamic": "^14.0.0",
		"@angular/router": "^14.0.0",
		"@ngx-formly/core": "^5.12.3",
		"rxjs": "^7.5.5",
		"tslib": "^2.3.1",
		"zone.js": "~0.11.5"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^14.0.0",
		"@angular-eslint/builder": "^13.2.1",
		"@angular-eslint/eslint-plugin": "^13.2.1",
		"@angular-eslint/eslint-plugin-template": "^13.2.1",
		"@angular-eslint/template-parser": "^13.2.1",
		"@angular/cli": "^14.0.0",
		"@angular/compiler-cli": "^14.0.0",
		"@compodoc/compodoc": "^1.1.19",
		"@delagen/eslint-plugin-deprecation": "^1.3.2",
		"@ngneat/spectator": "^10.0.1",
		"@storybook/addon-a11y": "6.5.6",
		"@storybook/addon-actions": "^6.5.6",
		"@storybook/addon-docs": "^6.5.6",
		"@storybook/addon-essentials": "^6.5.6",
		"@storybook/angular": "^6.5.9",
		"@storybook/builder-webpack5": "^6.5.6",
		"@storybook/manager-webpack5": "^6.5.6",
		"@types/jest": "^28.1.0",
		"@types/node": "^17.0.21",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prefer-arrow": "^1.2.3",
		"eslint-plugin-prettier": "^4.0.0",
		"gulp": "^4.0.2",
		"gulp-autoprefixer": "^8.0.0",
		"gulp-clean": "^0.4.0",
		"gulp-dart-sass": "^1.0.2",
		"gulp-rename": "^2.0.0",
		"jest": "^28.1.0",
		"jest-preset-angular": "^12.1.0",
		"ng-packagr": "^14.0.0",
		"postcss": "^8.4.14",
		"sass": "^1.52.2",
		"stylelint": "^14.8.5",
		"ts-node": "~10.8.0",
		"typescript": "4.7.2"
	},
	"volta": {
		"node": "16.15.1",
		"npm": "8.12.1"
	}
}
