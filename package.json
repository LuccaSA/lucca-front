{
  "name": "lucca-front",
  "version": "0.6.1",
  "description": "a library of usefull components for web developpement",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LuccaSA/lucca-front.git"
  },
  "keywords": [
    "lucca",
    "angular",
    "ng",
    "scss"
  ],
  "author": "lucien bertin <lbertin@lucca.fr>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LuccaSA/lucca-front/issues"
  },
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap",
    "lerna": "lerna",
    "travis": "lerna run travis --scope=@lucca-front/ng",
    "format": "npm run format-ng && npm run format-scss && npm run format-icons",
    "format-icons": "prettier --config ./.prettierrc --write \"packages/icons/{src,demo}/**/*.scss\"",
    "format-ng": "prettier --config ./.prettierrc --write \"packages/ng/{src,demo}/**/*.{ts,scss}\"",
    "format-scss": "prettier --config ./.prettierrc --write \"packages/scss/{src,demo}/**/*.scss\"",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "gitDir": "./",
    "linters": {
      "packages/icons/{src,demo}/**/*.scss": [
        "prettier --config ./.prettierrc --write",
        "git add"
      ],
      "packages/ng/{src,demo}/**/*.{ts,scss}": [
        "prettier --config ./.prettierrc --write",
        "git add"
      ],
      "packages/scss/{src,demo}/**/*.scss": [
        "prettier --config ./.prettierrc --write",
        "git add"
      ]
    }
  },
  "dependencies": {
    "lerna": "^2.9.0",
    "surge": "^0.19.0"
  },
  "devDependencies": {
    "colors": "^1.1.2",
    "glob": "^7.1.1",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.3",
    "npm-run": "^4.1.2",
    "prettier": "^1.5.3",
    "yargs": "^7.1.0"
  }
}
