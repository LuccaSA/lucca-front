{
  "name": "lucca-front",
  "description": "a library of useful components for web developpement",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LuccaSA/lucca-front.git"
  },
  "keywords": [
    "lucca",
    "angular",
    "ng",
    "scss"
  ],
  "author": "lucien bertin <lbertin@lucca.fr>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LuccaSA/lucca-front/issues"
  },
  "private": true,
  "workspaces": [
    "packages/icons",
    "packages/scss"
  ],
  "scripts": {
    "build": "npm run build:ng && npm run build:remaining",
    "build:ng": "ng run ng:build",
    "build:remaining": "node build.js",
    "start": "ng run ng:storybook",
    "jenkins-test": "jest --no-cache --runInBand",
    "test": "jest --maxWorkers=4 --isolatedModules=true --detectOpenHandles --watchAll",
    "build-compodoc": "compodoc -p ./tsconfig.compodoc-html.json -d compodoc-static",
    "build-storybook": "ng run ng:build-storybook",
    "lint": "ng lint",
    "lint:scss": "stylelint --config .stylelintrc.json packages/scss/src/**/*.scss"
  },
  "dependencies": {
    "@angular/animations": "^15.2.7",
    "@angular/cdk": "^15.2.6",
    "@angular/common": "^15.2.7",
    "@angular/compiler": "^15.2.7",
    "@angular/core": "^15.2.7",
    "@angular/forms": "^15.2.7",
    "@angular/platform-browser": "^15.2.7",
    "@angular/platform-browser-dynamic": "^15.2.7",
    "@angular/router": "^15.2.7",
    "@ngx-formly/core": "^5.12.6",
    "dompurify": "^2.4.1",
    "normalize.css": "^8.0.1",
    "rxjs": "^7.5.7",
    "tslib": "^2.4.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.2.6",
    "@angular-devkit/schematics": "^15.2.6",
    "@angular-eslint/builder": "^15.1.0",
    "@angular-eslint/eslint-plugin": "^15.1.0",
    "@angular-eslint/eslint-plugin-template": "^15.1.0",
    "@angular-eslint/template-parser": "^15.1.0",
    "@angular/cli": "^15.2.6",
    "@angular/compiler-cli": "^15.2.7",
    "@compodoc/compodoc": "^1.1.19",
    "@delagen/eslint-plugin-deprecation": "^1.3.2",
    "@ngneat/spectator": "^14.0.0",
    "@storybook/addon-a11y": "^7.0.0-beta.44",
    "@storybook/addon-essentials": "^7.0.0-beta.44",
    "@storybook/angular": "^7.0.0-beta.44",
    "@storybook/test-runner": "^0.10.0-next.8",
    "@testing-library/angular": "^13.1.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "@types/dompurify": "^2.4.0",
    "@types/jest": "^29.2.3",
    "@types/jest-axe": "^3.5.5",
    "@types/node": "^18.11.10",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^8.1.0",
    "jest": "^28.1.3",
    "jest-axe": "^7.0.0",
    "jest-preset-angular": "^12.2.6",
    "msw": "^0.47.4",
    "ng-packagr": "^15.1.1",
    "postcss": "^8.4.21",
    "postcss-scss": "^4.0.6",
    "postcss-selector-parser": "^6.0.11",
    "postcss-value-parser": "^4.2.0",
    "prettier": "^2.8.0",
    "sass": "^1.58.0",
    "storybook": "^7.0.0-beta.44",
    "stylelint": "^14.15.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-prettier": "^2.0.0",
    "ts-node": "~10.9.1",
    "typescript": "4.8.4"
  },
  "volta": {
    "node": "18.12.1"
  },
  "msw": {
    "workerDirectory": ".storybook/public"
  }
}