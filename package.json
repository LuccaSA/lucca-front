{
  "name": "lucca-front",
  "description": "a library of useful components for web developpement",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LuccaSA/lucca-front.git"
  },
  "keywords": [
    "lucca",
    "angular",
    "ng",
    "scss"
  ],
  "author": "Guilde Front Lucca <guilde-front@lucca.fr>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LuccaSA/lucca-front/issues"
  },
  "private": true,
  "workspaces": [
    "packages/icons",
    "packages/scss"
  ],
  "scripts": {
    "build": "npm run build:ng && npm run build:remaining",
    "build:ng": "ng run ng:build",
    "build:remaining": "node build.js",
    "start": "ng run ng:storybook",
    "jenkins-test": "jest --no-cache --runInBand",
    "test": "jest --maxWorkers=4 --isolatedModules=true --detectOpenHandles --watchAll",
    "build-compodoc": "compodoc -p ./tsconfig.compodoc-html.json -d compodoc-static",
    "build-storybook": "ng run ng:build-storybook",
    "lint": "ng lint",
    "lint:scss": "stylelint --config .stylelintrc packages/scss/src/**/*.scss",
    "icons:update": "node ./packages/icons/update-icons.js"
  },
  "dependencies": {
    "@angular/animations": "^17.0.2",
    "@angular/cdk": "^17.0.0",
    "@angular/common": "^17.0.2",
    "@angular/compiler": "^17.0.2",
    "@angular/core": "^17.0.2",
    "@angular/forms": "^17.0.2",
    "@angular/platform-browser": "^17.0.2",
    "@angular/platform-browser-dynamic": "^17.0.2",
    "@angular/router": "^17.0.2",
    "@ngx-formly/core": "^6.1.5",
    "dompurify": "^3.0.3",
    "normalize.css": "^8.0.1",
    "rxjs": "^7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular-devkit/schematics": "^17.0.0",
    "@angular-eslint/builder": "^17.0.1",
    "@angular-eslint/eslint-plugin": "^17.0.1",
    "@angular-eslint/eslint-plugin-template": "^17.0.1",
    "@angular-eslint/schematics": "^17.0.1",
    "@angular-eslint/template-parser": "^17.0.1",
    "@angular/cli": "^17.0.0",
    "@angular/compiler-cli": "^17.0.2",
    "@compodoc/compodoc": "^1.1.22",
    "@ngneat/spectator": "^15.0.1",
    "@storybook/addon-a11y": "^7.5.3",
    "@storybook/addon-docs": "^7.5.1",
    "@storybook/addon-essentials": "^7.5.3",
    "@storybook/addon-interactions": "^7.5.3",
    "@storybook/addon-mdx-gfm": "^7.5.3",
    "@storybook/angular": "^7.5.3",
    "@storybook/test-runner": "^0.14.0",
    "@testing-library/angular": "^14.4.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/user-event": "^14.5.1",
    "@types/dompurify": "^3.0.2",
    "@types/jest": "^29.5.1",
    "@types/jest-axe": "^3.5.5",
    "@types/node": "^18.11.10",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-deprecation": "^1.4.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^10.2.2",
    "jest": "^29.0.0",
    "jest-axe": "^7.0.0",
    "jest-preset-angular": "^13.1.4",
    "msw": "^2.0.6",
    "ng-packagr": "^17.0.0",
    "postcss": "^8.4.23",
    "postcss-scss": "^4.0.6",
    "postcss-selector-parser": "^6.0.12",
    "postcss-value-parser": "^4.2.0",
    "prettier": "^2.8.8",
    "sass": "^1.62.1",
    "storybook": "^7.5.3",
    "stylelint": "^14.15.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-prettier": "^2.0.0",
    "ts-node": "~10.9.1",
    "typescript": "5.2.2"
  },
  "volta": {
    "node": "18.12.1"
  },
  "msw": {
    "workerDirectory": ".storybook/public"
  }
}
