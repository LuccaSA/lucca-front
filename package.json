{
  "name": "lucca-front",
  "description": "a library of useful components for web developpement",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LuccaSA/lucca-front.git"
  },
  "keywords": [
    "lucca",
    "angular",
    "ng",
    "scss"
  ],
  "author": "Guilde Front Lucca <guilde-front@lucca.fr>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LuccaSA/lucca-front/issues"
  },
  "private": true,
  "workspaces": [
    "packages/icons",
    "packages/scss"
  ],
  "scripts": {
    "build": "npm run build:ng && npm run build:remaining",
    "build:ng": "ng run ng:build",
    "build:remaining": "node build.js",
    "start": "ng run ng:storybook",
    "jenkins-test": "jest --no-cache --runInBand",
    "test": "jest --maxWorkers=4 --isolatedModules=true --detectOpenHandles --watchAll",
    "build-compodoc": "compodoc -p ./tsconfig.compodoc-html.json -d compodoc-static",
    "build-storybook": "ng run ng:build-storybook",
    "test-storybook": "test-storybook --url http://localhost:6006 --junit",
    "test-storybook:coverage": "test-storybook --url http://localhost:6006 --coverage",
    "lint": "ng lint",
    "lint:scss": "stylelint --config .stylelintrc packages/scss/src/**/*.scss",
    "icons:update": "node ./packages/icons/update-icons.js",
    "i18n:update": "lucca translate lokalise && prettier --write 'packages/ng/**/translations.ts'",
    "lost-pixel": "lost-pixel --config lost-pixel.config.js",
    "lost-pixel:update": "lost-pixel update"
  },
  "dependencies": {
    "@angular/animations": "^19.0.1",
    "@angular/cdk": "^19.0.1",
    "@angular/common": "^19.0.1",
    "@angular/compiler": "^19.0.1",
    "@angular/core": "^19.0.1",
    "@angular/forms": "^19.0.1",
    "@angular/platform-browser": "^19.0.1",
    "@angular/platform-browser-dynamic": "^19.0.1",
    "@angular/router": "^19.0.1",
    "@lexical/history": "^0.23.1",
    "@lexical/html": "^0.23.1",
    "@lexical/link": "^0.23.1",
    "@lexical/markdown": "^0.23.1",
    "@lexical/rich-text": "^0.23.1",
    "@lexical/selection": "^0.23.1",
    "@lexical/utils": "^0.23.1",
    "@ngx-formly/core": "^6.3.11",
    "date-fns": "^3.6.0",
    "isomorphic-dompurify": "^2.17.0",
    "lexical": "^0.23.0",
    "libphonenumber-js": "^1.11.5",
    "marked": "^14.1.0",
    "normalize.css": "^8.0.1",
    "rxjs": "^7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.2",
    "@angular-devkit/schematics": "^19.0.2",
    "@angular-eslint/schematics": "^19.0.0",
    "@angular/cli": "^19.0.2",
    "@angular/compiler-cli": "^19.0.1",
    "@compodoc/compodoc": "^1.1.24",
    "@ngneat/spectator": "^19.1.2",
    "@storybook/addon-a11y": "^8.4.6",
    "@storybook/addon-docs": "^8.4.6",
    "@storybook/addon-essentials": "^8.4.6",
    "@storybook/addon-interactions": "^8.6.4",
    "@storybook/addon-mdx-gfm": "^8.4.6",
    "@storybook/angular": "^8.4.6",
    "@storybook/test": "^8.6.4",
    "@storybook/test-runner": "^0.18.2",
    "@testing-library/angular": "^17.3.2",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.1",
    "@types/jest-axe": "^3.5.5",
    "@types/node": "^18.11.10",
    "angular-eslint": "^19.2.1",
    "autoprefixer": "^10.4.14",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "glob": "^10.4.1",
    "jest": "^29.0.0",
    "jest-axe": "^7.0.0",
    "jest-preset-angular": "^14.4.1",
    "lost-pixel": "^3.22.0",
    "msw": "^2.3.0",
    "ng-packagr": "^19.0.0",
    "postcss": "^8.4.23",
    "postcss-scss": "^4.0.6",
    "postcss-selector-parser": "^7.0.0",
    "postcss-value-parser": "^4.2.0",
    "prettier": "^3.2.5",
    "sass": "^1.62.1",
    "storybook": "^8.4.5",
    "stylelint": "^14.15.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-prettier": "^2.0.0",
    "ts-node": "~10.9.1",
    "typescript": "5.6.3",
    "typescript-eslint": "^8.26.1"
  },
  "optionalDependencies": {
    "@nx/nx-darwin-arm64": "^19.1.0",
    "@nx/nx-darwin-x64": "^19.1.0",
    "@nx/nx-linux-x64-gnu": "^19.1.0",
    "@nx/nx-win32-x64-msvc": "^19.1.0"
  },
  "volta": {
    "node": "22.14.0"
  },
  "msw": {
    "workerDirectory": ".storybook/public"
  },
  "overrides": {
    "@compodoc/compodoc": {
      "pdfjs-dist": "4.2.67"
    }
  }
}
