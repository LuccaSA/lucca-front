/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"outDir": "./out-tsc/spec",
		"types": [
			"jest",
			"node"
		],
		/* Angular Zone does not support native async/await we have to stick with ES2016 */
		"target": "ES2016"
	},
	"include": [
		"**/*.spec.ts",
		"**/*.d.ts"
	]
}
